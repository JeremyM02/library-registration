extends ../layout

block content
    h3 Authors
    a(href='/authors/add') Add New Author
    table
        thead
            tr
                th First Name
                th Last Name
                th Date of Birth
                th
        tbody
            each author in authors
                tr
                    td= book.first_name
                    td= book.last_name
                    td= book.date_of_birth
                    td
                        a(href=`/authors/profile/${author.id}`) View Student