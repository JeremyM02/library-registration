extends ../layout

block content
    h3= course.name
    a(href=`/books/edit/${book.id}`) Edit Book
    a(href=`/books/delete/${book.id}`) Delete Book
    div
        p Title: #{book.title}
        p Publisher: #{book.publisher}
        p Genre: #{book.genre}
        p # of Pages:  #{book.page_amount}
        p Cover Image: #{book.cover_image}
        p= book.description